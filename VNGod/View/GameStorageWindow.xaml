<hc:Window x:Class="VNGod.View.GameStorageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNGod"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:strings="clr-namespace:VNGod.Resource.Strings"
        xmlns:model="clr-namespace:VNGod.Models"
        mc:Ignorable="d"
        Closing="Window_Closing" IsVisibleChanged="Window_IsVisibleChanged"
        Title="GameStorage" Height="500" Width="800">
    <Window.Resources>
        <model:WindowStatus x:Key="windowStatus"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="{x:Static strings:Strings.LocalGames}"/>
        <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" Text="{x:Static strings:Strings.RemoteGames}"/>
        <ListBox x:Name="localGameList" Grid.Row="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Image Source="{Binding Icon}" Width="32" Height="32"/>
                        <TextBlock Text="{Binding ShortDescription}" FontSize="12" TextWrapping="WrapWithOverflow" TextAlignment="Center" Margin="10,10,0,10" Grid.Column="1"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" DataContext="{DynamicResource windowStatus}">
            <Button x:Name="uploadButton" Margin="20" Click="UploadButton_Click" IsEnabled="{Binding IsIdle}">Upload</Button>
            <Button x:Name="downloadButton" Margin="20" IsEnabled="{Binding IsIdle}" Click="DownloadButton_Click">Download</Button>
            <Button x:Name="deleteLocalButton" Margin="20" IsEnabled="{Binding IsIdle}" Click="DeleteLocalButton_Click">Delete Local</Button>
            <Button x:Name="deleteRemoteButton" Margin="20" IsEnabled="{Binding IsIdle}" Click="DeleteRemoteButton_Click">Delete Remote</Button>
            <TextBlock x:Name="statusText" HorizontalAlignment="Center" Margin="20" Text="Status"/>
        </StackPanel>
        <ListBox x:Name="remoteGameList" Grid.Column="2" Grid.Row="1"></ListBox>
        <ProgressBar x:Name="workProgress" Grid.Row="2" Grid.ColumnSpan="3" Margin="20,0"/>
    </Grid>
</hc:Window>
