<hc:Window x:Class="VNGod.View.GameEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNGod.View"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:data="clr-namespace:VNGod.Data"
        mc:Ignorable="d"
        Title="GameEditWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox hc:TitleElement.Title="Bangumi ID" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding BangumiID,Mode=TwoWay}"/>
            <TextBox hc:TitleElement.Title="VNDB ID" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding VNDBID,Mode=TwoWay}"/>
            <Button x:Name="getInfoButton" Click="getInfoButton_Click" >Get Info</Button>
            <TextBox hc:TitleElement.Title="Name" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding Name,Mode=TwoWay}"/>
            <TextBox hc:TitleElement.Title="Executable Name" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding ExecutableName,Mode=TwoWay}"/>
            <TextBox hc:TitleElement.Title="Process Name" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding ProcessName,Mode=TwoWay}"/>
            <TextBox hc:TitleElement.Title="Save Path" hc:TitleElement.TitlePlacement="Left" Style="{StaticResource TextBoxExtend}" Margin="10" Text="{Binding SavePath,Mode=TwoWay}"/>
            
        </StackPanel>
    </Grid>
</hc:Window>
