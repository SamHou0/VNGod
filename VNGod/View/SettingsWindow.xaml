<hc:Window x:Class="VNGod.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNGod"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:strings="clr-namespace:VNGod.Resource.Strings"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="400" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <GroupBox Header="{x:Static strings:Strings.WebDAVConfig}">
                <StackPanel>
                    <TextBlock Text="{x:Static strings:Strings.WebDAVUrl}" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="webDavUrlTextBox" Margin="5"/>
                    <TextBlock Text="{x:Static strings:Strings.Username}" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="webDavUsernameTextBox" Margin="5"/>
                    <TextBlock Text="{x:Static strings:Strings.Password}" Margin="5" TextAlignment="Center"/>
                    <PasswordBox x:Name="webDavPasswordBox" Margin="5"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{x:Static strings:Strings.Authorization}" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="{x:Static strings:Strings.BangumiToken}" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="bangumiTokenTextBox" Margin="5"/>
                    <TextBlock Text="{x:Static strings:Strings.VNDBToken}" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="vndbTokenTextBox" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</hc:Window>
