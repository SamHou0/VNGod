<hc:Window x:Class="VNGod.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNGod"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="400" Closing="Window_Closing">
    <Grid>
        <StackPanel>
            <GroupBox Header="WebDAV Configuration">
                <StackPanel>
                    <TextBlock Text="WebDAV URL:" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="webDavUrlTextBox" Margin="5"/>
                    <TextBlock Text="Username:" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="webDavUsernameTextBox" Margin="5"/>
                    <TextBlock Text="Password:" Margin="5" TextAlignment="Center"/>
                    <PasswordBox x:Name="webDavPasswordBox" Margin="5"/>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Authorization" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Bangumi Token:" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="bangumiTokenTextBox" Margin="5"/>
                    <TextBlock Text="VNDB Token:" Margin="5" TextAlignment="Center"/>
                    <TextBox x:Name="vndbTokenTextBox" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</hc:Window>
