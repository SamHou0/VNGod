<hc:Window x:Class="VNGod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VNGod"
        xmlns:data="clr-namespace:VNGod.Data"
        xmlns:cv="clr-namespace:VNGod.Converter"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Window.Resources>
        <data:Repo x:Key="gameRepo"/>
        <cv:NullToBool x:Key="nullToBoolConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="gameList" Grid.Row="0" Grid.Column="0" Margin="5" SelectionChanged="gameList_SelectionChanged" ItemsSource="{DynamicResource gameRepo}" DisplayMemberPath="ShortDescription"/>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Game Details" FontWeight="Bold" FontSize="16" Margin="5"/>
            <StackPanel Grid.Row="1" x:Name="gameDetailsPanel">
                <TextBlock Text="Name:" FontWeight="Bold"/>
                <TextBlock x:Name="gameNameTextBlock" Margin="0,10,0,30" Text="{Binding SelectedItem, ElementName=gameList}" FontSize="24"/>
                <TextBlock Text="Description:" FontWeight="Bold"/>
                <TextBlock x:Name="gameDescriptionTextBlock" Margin="0,10,0,0" Text="{Binding SelectedItem.Description, ElementName=gameList}" FontSize="16" LineHeight="50"/>
            </StackPanel>
        </Grid>
        <hc:FlexPanel Grid.Column="2" FlexDirection="Column" JustifyContent="SpaceAround" AlignItems="Stretch">
            <StackPanel hc:FlexPanel.FlexShrink="0">
                <TextBlock TextAlignment="Center" Margin="0,10">Global Options</TextBlock>
                <Button x:Name="rescanButton" Content="Rescan Games" Margin="5" Click="rescanButton_Click"/>
                <Button x:Name="refreshInfoButton" Content="Refresh Info" Margin="5" Click="refreshInfoButton_Click"/>
                <Button x:Name="settingsButton" Content="Settings" Margin="5" Click="settingsButton_Click"/>
                <Button x:Name="repoButton" Content="Open Repo" Margin="5" Click="repoButton_Click"/>
            </StackPanel>
            <StackPanel hc:FlexPanel.FlexShrink="0">
                <TextBlock TextAlignment="Center" Margin="0,10">Game Options</TextBlock>
                <Button x:Name="playButton" Content="Play" Margin="5" Click="playButton_Click" Foreground="#FF4FDC17" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
                <Button x:Name="openGameFolderButton" Content="Open Folder" Margin="5" Click="openGameFolderButton_Click" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
                <Button x:Name="editGameButton" Content="Edit Info" Margin="5" Click="editGameButton_Click" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
                <Button x:Name="bangumiButton" Content="Bangumi" Margin="5" Click="bangumiButton_Click" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
                <Button x:Name="vndbButton" Content="VNDB" Margin="5" Click="vndbButton_Click" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
                <Button x:Name="syncButton" Content="Sync" Margin="5" Click="syncButton_Click" IsEnabled="{Binding SelectedItem, Converter={StaticResource nullToBoolConverter}, ElementName=gameList}"/>
            </StackPanel>
            <hc:CircleProgressBar x:Name="progressBar" Style="{StaticResource ProgressBarSuccessCircle}" Background="White" hc:FlexPanel.FlexShrink="0"/>
        </hc:FlexPanel>
    </Grid>
</hc:Window>
